            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/date_textView"
            android:text="18/10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</LinearLayout>